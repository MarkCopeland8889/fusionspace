# AI Website Builder - Environment Configuration
# Copy this file to .env.local and fill in your actual API keys

# ===== AI & Code Generation =====
# Google Gemini API (Primary - Recommended)
GOOGLE_AI_API_KEY=your-gemini-api-key-here

# OpenAI API (Fallback)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-organization-id-here

# Alternative AI providers (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ===== Live Server & Deployment =====
# Vercel for hosting and deployment
VERCEL_TOKEN=your-vercel-token-here
VERCEL_PROJECT_ID=your-project-id-here

# Netlify alternative
NETLIFY_TOKEN=your-netlify-token-here
NETLIFY_SITE_ID=your-site-id-here

# ===== Database & Storage =====
# Supabase for user data and project storage
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Alternative: PlanetScale for MySQL
DATABASE_URL=mysql://user:password@host:port/database

# ===== Authentication =====
# NextAuth.js configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# OAuth providers
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here

# ===== Payment Processing =====
# Stripe for subscriptions and payments
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===== Email & Marketing =====
# SendGrid for email campaigns
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Mailchimp alternative
MAILCHIMP_API_KEY=your-mailchimp-api-key-here
MAILCHIMP_SERVER_PREFIX=us1

# ===== Analytics & Monitoring =====
# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# PostHog for product analytics
POSTHOG_API_KEY=phc_your-posthog-key-here
POSTHOG_HOST=https://app.posthog.com

# ===== Social Media APIs =====
# Instagram Basic Display API
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Twitter API v2
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ===== Domain & DNS =====
# Cloudflare for DNS management
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id

# ===== File Storage =====
# AWS S3 for file uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary alternative
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===== Development & Testing =====
# Environment indicator
NODE_ENV=development

# Debug mode
DEBUG=ai-website-builder:*

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ===== Security =====
# JWT secret for API tokens
JWT_SECRET=your-super-secret-jwt-key-here

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key 